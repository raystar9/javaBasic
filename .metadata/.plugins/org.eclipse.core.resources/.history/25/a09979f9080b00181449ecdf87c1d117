package week1.day2;

import java.util.Scanner;

public class Test3 {

	public static void main(String[] args) {
		
		int a = 0, b = 0;
		int num = 0;
		
		Scanner sc = new Scanner(System.in);
		System.out.println("첫번째 값 입력 : ");
		a = sc.nextInt();
		System.out.println("두번째 값 입력 : ");
		b = sc.nextInt();
		sc.close();
		
		num = a + b;
		System.out.printf("%d + %d = %d\n", a, b, num);
		num = a - b;
		System.out.printf("%d - %d = %d\n", a, b, num);
		num = a * b;
		System.out.printf("%d * %d = %d\n", a, b, num);
		num = a / b;
		System.out.printf("%d / %d = %d\n", a, b, num);
		num = a % b;
		System.out.printf("%d %c %d = %d", a, '%', b, num);
	}
}